<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_shape_gray"
    android:orientation="vertical"
    android:padding="15dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_orderNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="订单号："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_orderNum_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/textView_orderNum"
            android:text="00010001"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_retreat"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/retreat_normal"
            android:text="退"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView_is_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/button_retreat"
            android:text="未接单"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="兴盛木桶饭"
            android:gravity="left"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2份"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8元/份"
            android:gravity="right"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/textView_orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间："
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView_orderTime_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView_orderTime"
            android:text="15号12:23"
            android:textSize="16sp" />
        

        <TextView
            android:id="@+id/textView_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="36元"
            android:textColor="#fd6c03"
            android:textSize="16sp" />
        
         <TextView
            android:id="@+id/textView_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/textView_total_value"
            android:text="合计："
            android:textColor="#fd6c03"
            android:textSize="16sp" />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <Button 
            android:id="@+id/button_ensure"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.48"
            android:text="确认收货"
            android:textColor="#ffffff"
             android:textSize="16sp"
            android:background="@drawable/button_style3"/>
        <Button 
            android:id="@+id/button_not_complaint"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.48"
            android:layout_marginLeft="20dp"
            android:text="还未投诉"
            android:textColor="#fd6c03"
            android:textSize="16sp"
            android:background="@drawable/button_style2"/>
    </LinearLayout>
</LinearLayout>