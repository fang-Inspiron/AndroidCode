<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee" >

    <LinearLayout
        android:id="@+id/search_find"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/search_circle_style"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/search_bt"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/search_button" />

        <EditText
            android:id="@+id/search_et_search"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:text="搜索  用户名  作品分类  文章"
            android:textColor="#368ecd"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/search_find"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="#33808080" />

    <RelativeLayout
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/search_find" >

        <LinearLayout
            android:id="@+id/search_feilei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="#358fcb"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/search_biaoqian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:text="分类"
                android:textColor="#ffffff"
                android:textSize="17dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/search_felei_line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/search_feilei"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#358fcb" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/search_felei_line"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#66808080" />

        <LinearLayout
            android:id="@+id/search_pinmian"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@id/search_felei_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="平面设计"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="网页设计"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="UI/icon"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="插画/手绘"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_xuni"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@id/search_pinmian"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="虚拟与设计"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="影视"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="摄影"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="其他"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_tuijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_xuni"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="#358fcb"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/search_biaoqian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:text="推荐"
                android:textColor="#ffffff"
                android:textSize="17dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/search_tuijian_line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/search_tuijian"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#358fcb" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/search_tuijian_line"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#44808080" />

        <LinearLayout
            android:id="@+id/search_renqi"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@id/search_tuijian_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="人气最高"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="收藏最多"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="2dp"
                android:tag="0"
                android:text="评论最多"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/yinying"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="编辑精选"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_renqi"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="#358fcb"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/search_biaoqian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:text="时间"
                android:textColor="#ffffff"
                android:textSize="17dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/search_shijian_line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/search_shijian"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#358fcb" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/search_shijian_line"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#44808080" />

        <LinearLayout
            android:id="@+id/search_zuihou"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@id/search_shijian_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="30分钟前"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="1小时前"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="2dp"
                android:tag="0"
                android:text="1月前"
                android:textSize="14dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:onClick="searchOnClick"
                android:padding="5dp"
                android:tag="0"
                android:text="1年前"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/search_result"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/search_find"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <ListView
            android:id="@+id/list_result"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="6dp"
            android:background="#ffffff"
            android:divider="#eeeeee"
            android:dividerHeight="6dp" />
    </LinearLayout>

</RelativeLayout>