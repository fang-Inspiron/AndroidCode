<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

       <ImageView
            android:id="@+id/item_image"
            android:layout_width="0dip"
            android:layout_height="125dp"
            android:layout_weight="0.48"
            android:background="@drawable/loading"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.52"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxEms="5"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_detail"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="11sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/item_time"
                android:layout_marginBottom="3dp"
                android:gravity="bottom" >

                <ImageButton
                    android:id="@+id/item_zan"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_like"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/item_zanCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/item_zan"
                    android:text="102"
                    android:textColor="#0c72ba" />

                <ImageButton
                    android:id="@+id/item_guanzhu"
                    android:layout_width="25dp"
                    android:layout_height="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/button_guanzhu"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/item_guanzhuCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/item_guanzhu"
                    android:text="26"
                    android:textColor="#0c72ba" />

                <ImageButton
                    android:id="@+id/item_share"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/item_shareCount"
                    android:background="@drawable/button_share"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/item_shareCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="5dp"
                    android:text="20"
                    android:textColor="#0c72ba" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:alpha="0.5"
        android:background="@color/gray" />

</LinearLayout>