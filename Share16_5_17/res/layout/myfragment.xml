<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:padding="10dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

       <ImageView
            android:id="@+id/my_image"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/my"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxEms="5"
                android:singleLine="true"
                android:text="昵称"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_classify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_below="@id/my_name"
                android:text="爱好"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/my_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_classify"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="开心了就笑，不开心了就过会再笑"
                android:textSize="11sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/item_time"
                android:layout_marginBottom="3dp"
                android:gravity="bottom" >
                
                <ImageButton
                    android:id="@+id/item_info"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/my_yuanxi"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/item_infoCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/item_info"
                    android:text="15"
                    android:textColor="#0c72ba" />

                <ImageButton
                    android:id="@+id/item_zan"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/button_like"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/item_zanCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/item_zan"
                    android:text="62"
                    android:textColor="#0c72ba" />

                  <ImageButton
                    android:id="@+id/item_care"
                    android:layout_width="25dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/item_careCount"
                    android:background="@drawable/button_guanzhu"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/item_careCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="5dp"
                    android:text="89"
                    android:textColor="#0c72ba" />
               
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_weight="0.75"
        android:layout_height="0dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/my_shangchuan"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/info_img1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_shangchuan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_toRightOf="@+id/info_img1"
                    android:gravity="center"
                    android:text="我的上传"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_jiantou" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_xinxi"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/info_img2"
                    android:layout_width="19dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_youxiang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_toRightOf="@+id/info_img2"
                    android:gravity="center"
                    android:text="我的信息"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_jiantou" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_tuijian"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/info_img3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_tuijian" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_toRightOf="@+id/info_img3"
                    android:gravity="center"
                    android:text="我推荐的"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_jiantou" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_yuanxi"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/info_img4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_yuanxi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_toRightOf="@+id/info_img4"
                    android:gravity="center"
                    android:text="院系通知"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_jiantou" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_shezhi"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/info_img5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_shezhi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_toRightOf="@+id/info_img5"
                    android:gravity="center"
                    android:text="设置"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_jiantou" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_back_ll"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/info_img6"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_toRightOf="@+id/info_img6"
                    android:gravity="center"
                    android:text="退出"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/my_jiantou" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>