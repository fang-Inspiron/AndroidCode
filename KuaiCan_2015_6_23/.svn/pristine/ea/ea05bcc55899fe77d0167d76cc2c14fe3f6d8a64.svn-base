<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:orientation="vertical"
        >
        
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43px"
        android:layout_marginTop="47px"
        android:text="请填写配送信息:"
        android:textSize="30px"
         />
    <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26px"
        android:layout_marginLeft="43px"
        android:layout_marginRight="43px"
        android:inputType="text"
        android:hint="配送地址:"
        />
    <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:layout_marginLeft="43px"
        android:layout_marginRight="43px"
        android:inputType="text"
        android:hint="姓名:"
        />
    <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:layout_marginLeft="43px"
        android:layout_marginRight="43px"
        android:inputType="phone"
        android:hint="电话:"
        />
    <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:layout_marginLeft="43px"
        android:layout_marginRight="43px"
        android:inputType="datetime"
        android:hint="送达时间:"
        />
    <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="43px"
        android:layout_marginRight="43px"
        android:inputType="text"
        android:hint="备注:"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88px"
        android:layout_marginLeft="43px"
        android:text="请选择支付方式:"
        android:textSize="35px"
        
        />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <CheckedTextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="28px"
	        android:layout_marginLeft="43px"
	        android:paddingLeft="50px"
	        android:text="餐到付款"
	        android:textSize="35px"
	        />
	     <CheckedTextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="28px"
	        android:layout_marginLeft="32px"
	        android:paddingLeft="50px"
	        android:text="在线支付"
	        android:textSize="35px"
	        />
	</LinearLayout>
	
	</LinearLayout>
	<Button 
	    android:id="@+id/refer_order_ok"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@layout/shape_button_ok"
	    android:layout_marginLeft="30px"
	    android:layout_marginRight="30px"
	    android:layout_marginTop="64px"
	    android:text="提交订单"
	    />
</LinearLayout>
