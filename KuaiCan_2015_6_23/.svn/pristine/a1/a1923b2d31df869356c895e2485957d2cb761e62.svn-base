<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="4" >

    <ImageView
        android:id="@+id/iv_main_tab_item"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingBottom="14px"
        android:paddingLeft="14px"
        android:paddingRight="14px"
        android:paddingTop="14px" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_main_item_goodsName"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="33px" />

            <TextView
                android:id="@+id/tv_main_item_goodsSales"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="1"
                android:textSize="25px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_main_item_goodsContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_dark" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_main_item_goodsPrice"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/orange_text"
                android:textSize="33px" 
                android:text="11"/>
            <Button 
                android:id="@+id/btn_main_item_submit"
                android:text="è´­"
                android:layout_marginRight="55px"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/circle_button_orange_selector"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>