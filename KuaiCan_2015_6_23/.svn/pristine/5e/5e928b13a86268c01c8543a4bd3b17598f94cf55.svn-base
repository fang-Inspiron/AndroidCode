<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_button_normal"
    android:orientation="vertical" >
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView 	
            android:id="@+id/shopping_car_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="20元标准餐"
            android:textSize="25sp"
            />
        <ImageButton 
            android:id="@+id/shopping_car_item_del"
             android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/shopping_03"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal" 
    >
    <TextView 
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
        android:text="单价："
        android:textSize="20sp"
        android:textColor="#fd6d00"
        />
    <TextView 
        android:id="@+id/shopping_car_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="20sp"
        android:textColor="#fd6d00"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元"
        android:textSize="20sp"
        android:textColor="#fd6d00"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:text="数量:"
        android:textSize="25sp"
        android:textColor="#6b6b6b"
        />
    <ImageButton 
        android:id="@+id/shopping_car_sub_count"
        android:layout_marginTop="20px"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shopping_07"
        />
    <TextView 
        android:layout_marginLeft="10dp"
        android:id="@+id/shopping_car_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
            android:textSize="30sp"
        />
    <ImageButton 
        android:layout_marginTop="20px"
        android:layout_marginLeft="10dp"
        android:id="@+id/shopping_car_add_count"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shopping_07"
        />
</LinearLayout>

</LinearLayout>
