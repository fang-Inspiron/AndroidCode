<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hui_back" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/order_info_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="#FFFFFF" >

                <LinearLayout
                    android:id="@+id/order_info_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/order_info_iv"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/order_info_top"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="14px"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/order_info_goodsName"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="老万余"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/order_info_goodsSales"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10px"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text="月销量：200"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/order_info_goodsContent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/top"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5px"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/gray_dark"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/order_info_bottom"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/order_info_goodsContent"
                        android:layout_marginBottom="13px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5px"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/order_info_goodsPrice"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="19dp"
                            android:layout_weight="1"
                            android:text="11"
                            android:textColor="@color/orange_text"
                            android:textSize="19dp" />

                        <Button
                            android:id="@+id/order_info_submit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/circle_button_orange_selector"
                            android:text="购"
                            android:textSize="22dp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/order_info_iv"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/order_info_right"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@id/order_info_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="14px"
                    android:layout_marginLeft="14px"
                    android:layout_marginTop="14px"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/order_info_businessPhone"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/order_info_gmList"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/order_info_goodsId"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/order_info_xiangqing"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_info_item"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textSize="19dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="260dp"
                android:layout_below="@id/order_info_xiangqing" >

                <LinearLayout
                    android:id="@+id/order_info_gmList_image1"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="3" >

                    <ImageView
                        android:id="@+id/gmList1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/loading" />

                    <ImageView
                        android:id="@+id/gmList2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/loading" />

                    <ImageView
                        android:id="@+id/gmList3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/loading" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/order_info_gmList_image2"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_below="@id/order_info_gmList_image1"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="3" >

                    <ImageView
                        android:id="@+id/gmList4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/loading" />

                    <ImageView
                        android:id="@+id/gmList5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/loading" />

                    <ImageView
                        android:id="@+id/gmList6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/loading" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/order_info_noGmList"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/no_image" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/order_info_playPhone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_button_call_phone_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="一键拨打"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_info_businessPhonecall"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@id/ll"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="咨询电话:18829382233"
        android:textSize="16dp" />

</RelativeLayout>