<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/hui_back" >

    <Button
        android:id="@+id/add_order_addOk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@layout/shape_button_ok"
        android:text="立即添加" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/add_order_addOk"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:background="@drawable/my_order_list_background"
        android:orientation="vertical"
        android:weightSum="16" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="16" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="30px"
                    android:layout_weight="2"
                    android:text="请填写商品信息:"
                    android:textSize="28px" />

                <EditText
                    android:id="@+id/add_order_orderName"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="25px"
                    android:layout_weight="2"
                    android:hint="商品名称" />

                <EditText
                    android:id="@+id/add_order_orderPrice"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="25px"
                    android:layout_marginTop="5px"
                    android:layout_weight="2"
                    android:hint="商品价格" />

                <EditText
                    android:id="@+id/add_order_orderCount"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="25px"
                    android:layout_marginTop="5px"
                    android:layout_weight="2"
                    android:hint="商品数量" />

                <EditText
                    android:id="@+id/add_order_orderCategory"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="25px"
                    android:layout_marginTop="5px"
                    android:layout_weight="2"
                    android:hint="商品类别" />

                <EditText
                    android:id="@+id/add_order_orderKey"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="25px"
                    android:layout_marginTop="5px"
                    android:layout_weight="2"
                    android:hint="关键字(增加关键字提供关注度)" />

                <EditText
                    android:id="@+id/add_order_orderInfo"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="25px"
                    android:layout_marginTop="5px"
                    android:layout_weight="2"
                    android:hint="详细描述" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="25px"
                    android:layout_marginTop="5px"
                    android:layout_weight="2"
                    android:text="上传图片："
                    android:textColor="@color/hui_text"
                    android:textSize="25px" />

                <ImageView
                    android:id="@+id/add_order_addPhoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="25px"
                    android:layout_marginTop="5px"
                    android:layout_weight="2"
                    android:background="@drawable/add" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_order_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/hui_back"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/add_order_paizhao"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="拍照" />

        <TextView
            android:id="@+id/add_order_xiangce"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="相册" />

        <TextView
            android:id="@+id/add_order_quxiao"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消" />
    </LinearLayout>

</RelativeLayout>