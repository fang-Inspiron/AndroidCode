<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hui_back" >

    <Button
        android:id="@+id/complete_info_Ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@layout/shape_button_ok"
        android:text="确认提交" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/complete_info_Ok"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:background="@drawable/my_order_list_background"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:text="请填写个人信息:"
            android:textSize="28px" />

        <EditText
            android:id="@+id/complete_info_sex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginLeft="23px"
            android:layout_marginRight="25px"
            android:hint="性别：" />
        <EditText
            android:id="@+id/complete_info_sex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginLeft="23px"
            android:layout_marginRight="25px"
            android:hint="性别：" />
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="上传学生证照片:(防止校外人士)"
            android:layout_marginTop="15px"
            android:layout_marginLeft="23px"
            android:layout_marginRight="25px"
            android:textSize="25px"
            android:textColor="@color/hui_text"/>
        <ImageView 
            android:id="@+id/complete_info_photo"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="23px"
            android:layout_marginRight="25px"
            android:background="@drawable/add"/>
    </LinearLayout>

</RelativeLayout>