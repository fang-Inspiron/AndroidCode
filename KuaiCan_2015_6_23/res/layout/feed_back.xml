<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hui_back"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:orientation="vertical">
        
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="亲爱的用户，您好。欢迎来到意见反馈中心。"
            android:textSize="22dp"
            android:textColor="#292929"/>
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:text="您对我们的服务或客户端有什么建议，请在下方留言。"
            android:textSize="22dp"
            android:textColor="#292929"/>
        
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:background="@color/white"
	    android:orientation="horizontal">
	    <EditText 
	        android:id="@+id/feed_back_advice"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="15dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_weight="3"
	        android:textSize="22dp"
	        android:hint="请输入意见反馈"/>
	    <Button 
	        android:id="@+id/feed_back_sendButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="15dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="8"
	        android:background="@drawable/rectangle_button_feedback_selector"
	        android:text="发送"
	        android:textSize="25dp"
	        android:textColor="@color/white"/>
	</LinearLayout>
</RelativeLayout>
