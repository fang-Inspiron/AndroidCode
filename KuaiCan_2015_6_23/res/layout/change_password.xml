<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0" >

    <LinearLayout
        android:id="@+id/change_password_neirong"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_change_password_zhanghu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户:"
                android:textColor="#3C3C3C"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_change_password_phonenumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="18710901731"
                android:textColor="#3C3C3C"
                android:textSize="22dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_change_password_oldpassword"
            style="@style/change_edittext"
            android:layout_marginTop="8dp"
            android:hint="原密码" />

        <EditText
            android:id="@+id/et_change_password_newpassword_1"
            style="@style/change_edittext"
            android:layout_marginTop="8dp"
            android:hint="新密码"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_change_password_newpassword_2"
            style="@style/change_edittext"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="8dp"
            android:hint="再次输入密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_change_password_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_password_neirong"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/rectangle_button_orange_selector"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="22dp" />

</RelativeLayout>