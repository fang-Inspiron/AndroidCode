<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#358fcb"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/back_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/back"
            android:text="上传"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/shang_top"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shang_photo"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/shang_photo"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/shang_local"
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:background="@drawable/dingwei" />

                <Button
                    android:id="@+id/shang_didian"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:background="@drawable/didian"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="8dp"
                    android:text="定位中......"
                    android:textSize="12sp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/shang_spinner"
                android:layout_width="120dp"
                android:layout_height="25dp"
                style="@android:style/Widget.Spinner"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/shang_xuanzen_normal" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/shang_line"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_below="@id/shang_top"
        android:layout_marginTop="5dp"
        android:background="@drawable/shang_lin" />

    <LinearLayout
        android:id="@+id/shang_pinmian"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/shang_line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yinying"
            android:onClick="searchOnClick"
            android:padding="5dp"
            android:tag="0"
            android:text="平面设计"
            android:textSize="14dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/yinying"
            android:onClick="searchOnClick"
            android:padding="5dp"
            android:tag="0"
            android:text="网页设计"
            android:textSize="14dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/yinying"
            android:onClick="searchOnClick"
            android:padding="5dp"
            android:tag="0"
            android:text="UI/icon"
            android:textSize="14dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yinying"
            android:onClick="searchOnClick"
            android:padding="5dp"
            android:tag="0"
            android:text="插画/手绘"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shang_xuni"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/shang_pinmian"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:background="@drawable/yinying"
            android:onClick="searchOnClick"
            android:padding="5dp"
            android:tag="0"
            android:text="虚拟与设计"
            android:textSize="14dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/yinying"
            android:onClick="searchOnClick"
            android:padding="5dp"
            android:tag="0"
            android:text="影视"
            android:textSize="14dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/yinying"
            android:onClick="searchOnClick"
            android:padding="5dp"
            android:tag="0"
            android:text="摄影"
            android:textSize="14dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yinying"
            android:onClick="searchOnClick"
            android:padding="5dp"
            android:tag="0"
            android:text="其他"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shang_zuopinmingcheng"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/shang_xuni"
        android:layout_marginTop="13dp"
        android:background="#ffffff" >

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="作品名称"
            android:textSize="18dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/shang_zuopinmingcheng"
        android:background="#33808080" />

    <LinearLayout
        android:id="@+id/shang_zuopinshuoming"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_below="@id/shang_zuopinmingcheng"
        android:layout_marginTop="13dp"
        android:background="#ffffff" >

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:hint="请添加作品说明/文章内容......"
            android:textSize="18dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/shang_zuopinshuoming"
        android:background="#88808080" />

    <Button
        android:id="@+id/shang_bt_sub"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/shang_zuopinshuoming"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:background="#358fcb"
        android:text="发布"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/jinzhi_cb"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/login_check_selector"
            android:button="@null"
            android:textColor="#0c629f" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="禁止下载"
            android:textColor="#000000"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>