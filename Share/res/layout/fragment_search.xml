<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#358fcb"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/back_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/shangchuan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/shangchuan" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/search_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_style"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/search_img1" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="搜索 用户名 作品分类 文章"
            android:inputType="text"
            android:padding="7dp"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#358fcb"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:paddingTop="3dp" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/search_img2" />

            <TextView
                android:id="@+id/classify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="分类"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#358fcb" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="平面设计"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="网页设计"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="UI/icon"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="插画/手绘"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="虚拟与设计"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="影视"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="摄影"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="其他"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#358fcb"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:paddingTop="3dp" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/search_img2" />

            <TextView
                android:id="@+id/recommand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="推荐"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#358fcb" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="人气最高"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="收藏最多"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="评论最多"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="编辑精选"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#358fcb"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:paddingTop="3dp" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/search_img2" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="时间"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#358fcb" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="30分钟前"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="1小时前"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="1月前"
                android:textColor="#000000"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.25"
                android:background="@drawable/button_style"
                android:onClick="MyTextViewOnClick"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:tag="0"
                android:text="1年前"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_result"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/search_find"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="125dp"
            android:background="@drawable/result1" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="125dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/result2" />
    </LinearLayout>

</LinearLayout>