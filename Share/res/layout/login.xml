<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kaiji1" >

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/tv_login_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_login_logo"
        android:gravity="center_horizontal"
        android:text="SHARE"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/lv_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_login_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_img" />

        <ImageView
            android:id="@+id/iv_login_line1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line" />

        <EditText
            android:id="@+id/edt_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:inputType="text"
            android:paddingTop="12dp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="270dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pass_img" />

        <ImageView
            android:id="@+id/iv_login_line2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line" />

        <EditText
            android:id="@+id/edt_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:inputType="text"
            android:paddingTop="12dp"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_login"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/button_shape"
        android:text="登陆"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/button_shape"
        android:text="注册"
        android:textColor="#ffffff" />
    
    <CheckBox 
        android:id="@+id/checkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="35dp"/>
        
    <TextView 
        android:id="@+id/tv_register_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="70dp"
        android:text="自动登录"
        android:textSize="20sp"/>

</RelativeLayout>