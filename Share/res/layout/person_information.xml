<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#358fcb"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/back_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/back"
            android:text="我的信息"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:onClick="MyInforLayoutOnClick"
        android:paddingBottom="12dp" >

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:text="评论"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="12dp"
            android:text="7"
            android:textColor="#358fcb" />

        <ImageButton
            android:id="@+id/btn_triangle1"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:layout_toLeftOf="@+id/comment_num"
            android:background="@drawable/person_triangle" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_recomMe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:onClick="MyInforLayoutOnClick"
        android:paddingBottom="12dp" >

        <TextView
            android:id="@+id/tv_recomMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:text="推荐我的"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recomMe_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="12dp"
            android:text="9"
            android:textColor="#358fcb" />

        <ImageButton
            android:id="@+id/btn_triangle2"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:layout_toLeftOf="@+id/recomMe_num"
            android:background="@drawable/person_triangle" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_newConcern"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:onClick="MyInforLayoutOnClick"
        android:paddingBottom="12dp" >

        <TextView
            android:id="@+id/tv_newConcern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:text="新关注的"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/newConcern_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="12dp"
            android:text="5"
            android:textColor="#358fcb" />

        <ImageButton
            android:id="@+id/btn_triangle3"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:layout_toLeftOf="@+id/newConcern_num"
            android:background="@drawable/person_triangle" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_privateLetter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:onClick="MyInforLayoutOnClick"
        android:paddingBottom="12dp" >

        <TextView
            android:id="@+id/tv_privateLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:text="私信"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/privateLetter_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="12dp"
            android:text="4"
            android:textColor="#358fcb" />

        <ImageButton
            android:id="@+id/btn_triangle4"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:layout_toLeftOf="@+id/privateLetter_num"
            android:background="@drawable/person_triangle" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_activityNotify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:onClick="MyInforLayoutOnClick"
        android:paddingBottom="12dp" >

        <TextView
            android:id="@+id/tv_activityNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:text="活动通知"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/activityNotify_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="12dp"
            android:text="1"
            android:textColor="#358fcb" />

        <ImageButton
            android:id="@+id/btn_triangle5"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="17dp"
            android:layout_toLeftOf="@+id/activityNotify_num"
            android:background="@drawable/person_triangle" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="2dp"
        android:background="#ffffff">
        
    </RelativeLayout>

</LinearLayout>