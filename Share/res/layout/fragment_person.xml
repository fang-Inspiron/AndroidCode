<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#358fcb"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/back_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="个人信息"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/person_img"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.29"
            android:background="@drawable/person_img"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="0.71" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="18dp"
                android:text="share小白"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="8dp"
                android:text="数媒/设计爱好者"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/identity"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:text="开心了就笑，不开心了就过会再笑"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/upload"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button_upload"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/unload_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/upload"
                android:paddingLeft="2dp"
                android:text="15"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/zan"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="65dp"
                android:background="@drawable/button_zan"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/zan"
                android:paddingLeft="2dp"
                android:text="120"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/concern"
                android:layout_width="20dp"
                android:layout_height="13dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="130dp"
                android:background="@drawable/button_guanzhu"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/concern_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/concern"
                android:paddingLeft="2dp"
                android:text="89"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_upload"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingBottom="12dp"
        android:onClick="MyLayoutOnClick"
        android:background="#ffffff" >

        <ImageButton
            android:id="@+id/btn_upload"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_img1" />

        <TextView
            android:id="@+id/tv_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="我上传的"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btn_triangle1"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_triangle" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_information"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingBottom="12dp"
        android:onClick="MyLayoutOnClick"
        android:background="#ffffff" >

        <ImageButton
            android:id="@+id/btn_information"
            android:layout_width="15dp"
            android:layout_height="12dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_img2" />

        <TextView
            android:id="@+id/tv_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="我的信息"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btn_triangle2"
            android:layout_width="13dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_triangle" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_recommend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingBottom="12dp"
        android:onClick="MyLayoutOnClick"
        android:background="#ffffff" >

        <ImageButton
            android:id="@+id/btn_recommend"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_img3" />

        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="我推荐的"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btn_triangle3"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_triangle" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_notify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingBottom="12dp"
        android:onClick="MyLayoutOnClick"
        android:background="#ffffff" >

        <ImageButton
            android:id="@+id/btn_notify"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_img4" />

        <TextView
            android:id="@+id/tv_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="院系通知"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btn_triangle4"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_triangle" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingBottom="12dp"
        android:onClick="MyLayoutOnClick"
        android:background="#ffffff" >

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_img5" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="设置"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btn_triangle5"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_triangle" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_exit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingBottom="12dp"
        android:onClick="MyLayoutOnClick"
        android:background="#ffffff" >

        <ImageButton
            android:id="@+id/btn_exit"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_img6" />

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="退出"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btn_triangle6"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_triangle" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="3dp"
        android:background="#ffffff">
        
    </RelativeLayout>
</LinearLayout>